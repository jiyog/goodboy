<% include ../layout/header.ejs %>
<div id="profile">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                                <% if(users) { %>
                                    <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="mr-2">
                                                    <img class="rounded-circle" src="https://picsum.photos/164/164" alt="...">
                                                </div>
                                                <div class="ml-2">
                                                    <div class="h5 m-0">@<%= users.username %></div>
                                                </div>
                                                <div class="profile-contact">
                                                    <ul>
                                                      <li>
                                                          <% if(users._id == id) { %>
                                                            <a href="#" class="btn btn-outline-warning edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                                                          <% } else { %>
                                                            <a href="#" class="btn btn-outline-primary follow"><i class="fa fa-heart-o" aria-hidden="true"></i> Follow</a>
                                                            <a href="#" class="btn btn-outline-info inbox"><i class="fa fa-envelope-open-o" aria-hidden="true"></i> Inbox</a>
                                                          <% } %>
                                                          
                                                      </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                <% }%>
                        </li>
                        <li class="list-group-item">
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                             Distinctio similique ipsa magni ipsam laboriosam accusantium rerum, doloremque fugit cum est, 
                             recusandae minus at porro soluta, delectus quae corrupti nostrum aliquid.
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../layout/footer.ejs %>